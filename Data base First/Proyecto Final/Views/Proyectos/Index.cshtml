@model IEnumerable<Proyecto_Final.Models.TProyecto>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Agrega estilos personalizados aquí */
        .card {
            margin-bottom: 20px;
        }

        .card-body {
            text-align: left;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text strong {
            display: block;
        }

        .text-right {
            text-align: right;
        }
    </style>
</head>
<body class="text-center">

    <h1>Proyectos</h1>

    <p style="margin-top: 30px;">
        <a asp-action="Create" class="btn btn-primary">Crear nuevo proyecto</a>
    </p>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                            <p class="card-text"><strong>Fecha Inicial:</strong> @Html.DisplayFor(modelItem => item.FechaInicio)</p>
                            <p class="card-text"><strong>Fecha Final:</strong> @Html.DisplayFor(modelItem => item.FechaFin)</p>
                            <div class="text-right">
                                <a asp-action="Edit" asp-route-id="@item.IdProyecto">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.IdProyecto">Detalles</a> |
                                <a asp-action="Delete" asp-route-id="@item.IdProyecto" class="delete-link">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <a href="/Home" class="btn btn-secondary">Volver al menu principal</a>
</body>
</html>







