@model Proyecto_Final.Models.TRole

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminacion</h1>

<h3>Estas seguro que deseas Eliminar el Rol?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRol).Replace("NombreRol", "Nombre del Rol")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreRol)
        </dd>
    </dl>
    <style>
        .border-button {
            display: inline-block;
            padding: 7px 14px;
            border: 1px solid #000; /* Color del borde (puedes ajustar el color) */
            border-radius: 4px; /* Redondear las esquinas del botón */
            text-decoration: none;
            color: #000; /* Color del texto */
        }
    </style>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRol" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="border-button">Volver</a>
    </form>
</div>
