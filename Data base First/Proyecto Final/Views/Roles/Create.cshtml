@model Proyecto_Final.Models.TRole

@{
    ViewData["Title"] = "Create";
}

<h1>Creacion de Nuevos Roles</h1>
<hr />
<div class=" row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <input asp-for="IdRol" class="form-control" />
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreRol" class="control-label">Nombre del Rol</label>
                <input asp-for="NombreRol" class="form-control" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>
            <div class="form-group text-center" style="margin-top: 20px;">
                <input type="submit" value="Crear Nuevo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center" style="margin-top: 15px;">
    <a asp-action="Index" class="btn btn-secondary">Volver</a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
