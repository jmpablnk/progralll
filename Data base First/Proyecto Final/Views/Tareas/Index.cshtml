@model IEnumerable<Proyecto_Final.Models.TTarea>

@{
    ViewData["Title"] = "Index";
}
<body class="text-center">
<h1>Tipos de Tareas</h1>

    <p style="margin-top: 30px;">
        <a asp-action="Create" class="btn btn-primary">Crear una nueva Tarea</a> <!-- Botón azul -->
    </p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                    @Html.DisplayName("Nivel de Dificultad")
            </th>
            <th>
                @Html.DisplayName("Fecha Inicial")
            </th>
            <th>
                @Html.DisplayName("Fecha Final")
            </th>
            <th>
                @Html.DisplayName("Numero del proyecto")
            </th>
            <th>
                @Html.DisplayName("Nombre del Usuario" )
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelDificultad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProyectoNavigation.IdProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Usuario)
            </td>
            <td>
                        <html>
                        <head>
                            <style>
                                a.Colorazul {
                                    color: blue; /* Color azul intenso */
                                    text-decoration: underline; /* Subrayado enlace */
                                }

                                a.delete-link {
                                    color: red; /* Color rojo */
                                    text-decoration: underline; /* Subrayado enlace */
                                }
                            </style>
                        </head>
                        <body>

                            <p style="text-align: right;>
                            <span style="margin-left: auto;">

                                    <a asp-action="Edit" asp-route-id="@item.IdProyecto" class="Colorazul">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdProyecto" class="Colorazul">Detalles</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdProyecto" class="delete-link">Eliminar</a>
                            </p>

                        </body>
                    </html>
            </td>
        </tr>
            <a href="/Home" class="btn btn-secondary">Volver al menu principal</a>
}
    </tbody>
</table>
</body>